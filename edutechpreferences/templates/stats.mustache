{{!
    @template block_edutechpreferences/stats

    Template purpose and description.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
    }
}}

<div class="row">
  {{#stats}}
  <div class="col-lg-3 col-md-6" style="margin-bottom:10px; padding:5px;">
    <div class="card">
      <h5 class="card-header">
      <b>{{category}}</b>
      </h5>
      <div class="card-body" style="padding:20px;">
        {{#areas}}
        {{name}}
        <div class="progress">
          <div class="progress-bar progress-bar-striped" role="progressbar" style="width: {{count}}%;"
          aria-valuenow="{{count}}" aria-valuemin="0" aria-valuemax="100"> {{count}}%</div>
        </div><br>
        {{/areas}}
      </div>
    </div>
    </div>
    {{/stats}}
</div>

<div class="row">
    <div class="col-md-12">
      <table class="table">
         {{#summarystats}}
        <tr><td><b> {{name}}: </b></td><td> {{number}} </td></tr>
         {{/summarystats}}
      </table>
  </div>
</div>



<div class="row">
    <div class="col-md-12" style="text-align:center;"><br><br>
      {{#button}}
    <a href="{{url}}"><button type="button" class="btn btn-primary">
        {{name}}
      </button></a>
      {{/button}}
    </div>
</div>
